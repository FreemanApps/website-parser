{
	"name": "website-parser",
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "nodemon",
		"start": "tsx src/app.ts",
		"dev:css": "tailwindcss -i ./app/app.css -o ./public/app.css --watch",
		"deploy": "tailwindcss -i ./app/app.css -o ./public/app.css --minify && tsx src/app.ts"
	},
	"dependencies": {
		"@hono/node-server": "^1.1.1",
		"@hono/sentry": "^0.2.1",
		"@postlight/parser": "^2.2.3",
		"dotenv": "^16.3.1",
		"hono": "^3.3.4",
		"marked": "^6.0.0",
		"xss": "^1.0.14",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@types/node": "^20.4.5",
		"@typescript-eslint/eslint-plugin": "^6.2.0",
		"@typescript-eslint/parser": "^6.2.0",
		"eslint": "^8.46.0",
		"nodemon": "^3.0.1",
		"prettier": "^3.0.0",
		"prettier-plugin-tailwindcss": "^0.4.1",
		"tailwindcss": "^3.3.3",
		"tsx": "^3.12.7"
	}
}
